@model string
@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var idCliente = (string)ViewBag.IdCliente;
}

@section head
{
    <link href="@Url.Content("~/Content/css/geral.css")" rel="stylesheet" type="text/css" />
}
<div class="container">
    <input type="hidden" id="id-cliente" value="@idCliente"/>
    <div class="page-header">
        <h2>
            Menu - VemKa</h2>
    </div>
    <div class="row-fluid menu">
        <ul class="thumbnails">
            <li class="span4">
                <div class="thumbnail">
                    <img src=@Url.Content("~/Content/img/adicionar.png") alt="Adicionar Promoções" />
                    <div class="caption">
                        <h3>
                            Adicionar Promoções</h3>
                        <p>
                            Aqui você poderá adicionar diversas promoções a sua empresa, configurando liberação
                            e expiração de cada promoção. Todas as promoções apontam para sua localização. Aguarde,
                            mais novidades em breve!
                        </p>
                    </div>
                    <div class="widget-footer">
                        <p>
                            <a href="@Url.Action("Cadastro", "Promocao", new { idCliente = @idCliente })" class="btn btn-primary">Entrar</a>&nbsp;
                        </p>
                    </div>
                </div>
            </li>
            <li class="span4">
                <div class="thumbnail">
                    <img src=@Url.Content("~/Content/img/relatorio.png") alt="Adicionar Promoções" />
                    <div class="caption">
                        <h3>
                            Relatório</h3>
                        <p>
                            Que tal analisar como anda seu negócio? Você verá quem está curtindo
                            suas promoções. Podendo utilizar as informações aqui dispostas para melhor se planejar
                            e chamar a atenção de seus clientes!
                        </p>
                    </div>
                    <div class="widget-footer">
                        <p>
                            <a href="@Url.Action("QuantidadeAcesso", "Relatorio", new { idCliente = @idCliente })" class="btn btn-primary">Entrar</a>&nbsp;
                        </p>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>
